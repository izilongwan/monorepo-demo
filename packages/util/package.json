{
  "name": "@monorepo-demo/util",
  "version": "1.0.0",
  "description": "Utility library",
  "main": "dist/util.cjs",
  "type": "module",
  "module": "dist/util.es.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/util.es.js",
      "require": "./dist/util.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "vite": "vite",
    "vite:build": "vite build && tsc --emitDeclarationOnly --outDir dist",
    "dev": "node --loader ts-node/esm index.ts",
    "dev:compile": "tsc index.ts --target ES2020 --module commonjs && node index.js && rm index.js",
    "build": "tsc --target ES2020 --declaration --outDir dist",
    "start": "node dist/index.js"
  },
  "keywords": [
    "utils"
  ],
  "author": "",
  "license": "ISC"
}
